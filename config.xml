<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets"
        xmlns:rim="http://www.blackberry.com/ns/widgets"
        version="2.0"
        rim:header="RIM-Widget: rim/widget"
		id        = "app.todojujuy.com"
		versionCode = "129"
		version   = "1.2.1"> 
<name>TodoJujuy.com</name>
<author href="http://www.todojujuy.com" email="info@todojujuy.com">
MF
</author>
<rim:navigation mode="focus" />
<description>Diario Digital - Jujuy, Argentina - Version 1.2.1 para BlackBerry</description>

<rim:loadingScreen backgroundImage="splash.png"
				 foregroundImage="foreground.gif"
				 onLocalPageLoad="true">
<rim:transitionEffect type="zoomIn" />
</rim:loadingScreen>
<rim:connection timeout="25000">
<id>TCP_WIFI</id>
<id>MDS</id>
<id>BIS-B</id>
<id>TCP_CELLULAR</id>
<id>WAP2</id>
<id>WAP</id>
</rim:connection>
 
<icon src="icon.png" />
<icon src="res/img/logo.png" gap:platform="blackberry" />
<gap:splash src="splash.png" />
<gap:splash src="res/splash/bb/splash.png" gap:platform="blackberry" />

<preference name="orientation" value="portrait" />
<preference name="FadeSplashScreen" value="true" />
<preference name="FadeSplashScreenDuration" value="2" />
<feature id="blackberry.ui.menu" />
</widget>